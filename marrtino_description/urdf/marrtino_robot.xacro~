<?xml version="1.0"?>

<robot  xmlns:xacro= "http://www.ros.org/wiki/xacro"
	xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
	xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
	xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
	name="robot_xacro">
    
	<xacro:include filename="$(find marrtino_navigation)/urdf/robot.gazebo"/>
	
	<!-- variable for robot's elements robot -->
	<xacro:property name="radius_wheel_sx_dx" value="0.07"/>
    	<xacro:property name="length_wheel_sx_dx" value="0.03"/>
    	<xacro:property name="radius_wheel_down" value="0.03"/>
    	<xacro:property name="length_wheel_down" value="0.015"/>
	<xacro:macro name="default_inertial" params = "mass">
		<inertial>
			<mass value="${mass}" />
			<inertia ixx="1.0" ixy = "0.0" ixz = "0.0"
				 iyy="1.0" iyz = "0.0" izz = "1.0" />
		</inertial>
	</xacro:macro>
	

<!-- ..........................................Links definitions .....................................................-->

	<!-- creo la base principale del robot-->
	<link name="base_link" type="fixed">
		<visual>
			<geometry>
				<box size="0.28 0.37 0.21"/>
			</geometry>
			<origin rpy = "0 0 0" xyz="0 0 0.20"/>
			<material name="red">
				<color rgba="1 1 1 1"/>
			</material>
		</visual>	
		<collision>
			<geometry>
				<box size="0.28 0.37 0.21"/>
			</geometry>
		</collision>
		<xacro:default_inertial mass="10"/>
	</link>
	
	<link name="base_footprint">
		<visual>
			<geometry>
				<box size="0.001 0.001 0.001"/>
			</geometry>
			<origin xyz="0 0 0"/>
		</visual>
	</link>

	<link name="wheel_sx">
		<visual>
			<geometry>
				<cylinder length="${length_wheel_sx_dx}" radius="${radius_wheel_sx_dx}"/>
			</geometry>
			<origin rpy="1.5 0 0" xyz="0 0 0"/>
			<material name="black">
				<color rgba="0 0 0 1"/>
			</material>  
		</visual>
		<collision>
			<geometry>
				<cylinder length="${length_wheel_sx_dx}" radius="${radius_wheel_sx_dx}"/>
			</geometry>
		</collision>
		<xacro:default_inertial mass="1"/>
	</link>

	<link name="wheel_dx">
		<visual>
			<geometry>
				<cylinder length="${length_wheel_sx_dx}" radius="${radius_wheel_sx_dx}"/>
			</geometry>
			<origin rpy="1.5 0 0" xyz="0 0 0"/>
			<material name="black">
				<color rgba="0 0 0 1"/>
			</material>  
		</visual>
		<collision>
			<geometry>
				<cylinder length="${length_wheel_sx_dx}" radius="${radius_wheel_sx_dx}"/>
			</geometry>
		</collision>
		<xacro:default_inertial mass="1"/>
	</link>
	
	<link name="block" type="fixed">
		<visual>
			<geometry>
				<box size="0.03 0.03 0.10"/>
			</geometry>
			<origin rpy = "0 0 1.54" xyz="-0.085 0 0.065"/>
			<material name="red">
				<color rgba="1 1 1 1"/>
			</material>
		</visual>	
		<collision>
			<geometry>
				<box size="0.3 0.3 0.185"/>
			</geometry>
		</collision>
		<xacro:default_inertial mass="10"/>
	</link>
	
	<link name="wheel_down">
		<visual>
			<geometry>
				<cylinder length="${length_wheel_down}" radius="${radius_wheel_down}"/>
			</geometry>
			<origin rpy="1.5 0 0" xyz="0 0 3.14"/>
			<material name="black">
				<color rgba="0 0 0 1"/>
			</material>  
		</visual>
		<collision>
			<geometry>
				<cylinder length="${length_wheel_down}" radius="${radius_wheel_down}"/>
			</geometry>
		</collision>
		<xacro:default_inertial mass="1"/>
	</link>
	
	<!-- Hokuyo Laser -->
	<link name="laser" >		
		<visual>	
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<geometry>
				<mesh filename="package://marrtino_navigation/meshes/hokuyo.dae"/>
			</geometry>
		</visual>

		<collision>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<geometry>
				<box size="0.1 0.1 0.1"/>
			</geometry> 
		</collision>
	
		<inertial>
			<mass value="1e-5"/>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<inertia ixx="1e-6" ixy="0" ixz="0"
				 iyy="1e-6" iyz="0" izz="1e-6"/> 
		</inertial>
	</link> 
	
<!-- ..........................................Joints definitions .....................................................-->

	<joint name="base_to_wheel1" type="continuous">
		<parent link="base_link" />
		<child link="wheel_sx" />
		<origin rpy="0 0 3.14" xyz="0.10 0.20 ${radius_wheel_sx_dx}"/>
		<axis xyz="0 1 0" />
	</joint>
	<joint name="base_to_wheel2" type="continuous">
		<parent link="base_link" />
		<child link="wheel_dx" />
		<origin rpy="0 0 3.14" xyz="0.10 -0.20 ${radius_wheel_sx_dx}"/>
		<axis xyz="0 1 0" />
	</joint>
	<joint name="block_to_wheel_down" type="continuous">
		<parent link="block" />
		<child link="wheel_down" />
		<origin rpy="0 0 3.14" xyz="-0.085 0 ${radius_wheel_down}"/>
		<axis xyz="0 1 0" />
	</joint>
	<joint name="block_to_base_link" type="fixed">
		<parent link="base_link" />
		<child link="block" />
		<origin xyz="0.0 0.0 0.0" rpy="0 0 3.14"/>
		<axis xyz="0 1 0" />
	</joint>
   	<joint name="base_footprint_joint" type="fixed">
		<parent link="base_footprint" />
		<child link="base_link" />
		<origin xyz="0.0 0.0 0.0" rpy="0 0 3.14"/>
		<axis xyz="0 1 0" />
	</joint>
	
	<!--  Laser joint -->
	<joint name="base_laser" type="fixed">
		<parent link="base_link"/>
		<child link="laser"/>
		<origin xyz="-0.115 0 0.34" rpy="0 0 3.14"/>
		<axis xyz="0 1 0"/>
	</joint>
	
</robot>
